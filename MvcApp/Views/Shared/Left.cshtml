<script type="text/javascript">

    function newMainPanel(url,title,icon) {
        var panel = $('#main-tab').tabs('getTab', title);
        if (panel) {
            $('#main-tab').tabs('select', title);
            panel.panel('refresh', url);
        }
        else {
            $('#main-tab').tabs('add', {
                title: title,
                href: url,
                iconCls: icon,
                fit: true,
                closable: true
            });
        }
    }

    $(document).ready(function () {
        $("a.main-menu").click(function (e) {
            var title = $(this).text();
            var url = $(this).attr('src');
            var icon = $(this).attr('iconCls');

            newMainPanel(url, title, icon);

            e.stopPropagation();
            return false;
        });

    });
 </script>