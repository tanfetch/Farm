@model IEnumerable<Farm.Raisers.DataContext.Sales>

<span>销售总数:</span>
<span style="color:brown;">@Model.Sum(p=>p.salesNum) 头</span>
<span>&nbsp;&nbsp;</span>
@{
    var g = Model.GroupBy(p => p.salesmethods);
    foreach(var item in g)
    {
        <span>@item.Key :</span>
        <span style="color:brown;">@item.Sum(p=>p.salesNum) 头</span>
        <span>&nbsp;&nbsp;</span>
    }
}
