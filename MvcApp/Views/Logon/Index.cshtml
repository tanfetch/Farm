 <script src="@Url.Content("~/Content/js/Jquery.ajaxForm.js")" type="text/javascript"></script>
 <script>

     $(document).ready(function () {

         $('#fmlogon').submit(function () {
             $(this).ajaxSubmit({
                 success: function (data) {
                     if (data.success) {
                         $('#logonmsg').text(data.message);
                         window.location.href = '/';
                     }
                     else {
                         $('#logonmsg').html('<span style="color:Red;">' + data.message + '</span>');
                     }
                 },
                 error: function (data, t) {
                     alert("error:[" + t + "]" + data.responseText);
                 }
             });

             return false;
         });

     });

