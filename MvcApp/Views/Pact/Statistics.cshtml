@model IEnumerable<Farm.Raisers.DataContext.Pact>

<span>合同总数:</span>
<span style="color:brown;">@Model.Count() 户</span>
<span style="color:brown;">@Model.Sum(p=>p.pactNum) 头</span>
<span>&nbsp;&nbsp;</span>
@{
    var g = Model.GroupBy(p => p.areaName);
    foreach(var item in g)
    {
        <span>@item.Key :</span>
        <span style="color:brown;">@item.Count() 户</span>
        <span style="color:brown;">@item.Sum(p=>p.pactNum) 头</span>
        <span>&nbsp;&nbsp;</span>
    }
}
