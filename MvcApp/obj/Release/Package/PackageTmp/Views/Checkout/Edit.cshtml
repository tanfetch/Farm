@model Farm.Raisers.DataContext.tbCheckout
<div style="padding:10px;">
<fieldset style="width:720px;padding:10px;">
    <legend>修改结算信息</legend>

<form action="/Checkout/Edit" method="post">

    <table>
    <tr>
        <td style="width:90px;"> <label>结算金额：</label></td>  
        <td style="width:150px;">@Html.TextBoxFor(model => model.amount, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>

        <td style="width:100px;"> <label>头平结算金额：</label></td>  
        <td style="width:150px;">@Html.TextBoxFor(model => model.ArgAmount, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>

        <td style="width:100px;"> <label>合同结算金额：</label></td>  
        <td style="width:150px;">@Html.TextBoxFor(model => model.pactAmount, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>
    </tr>
    <tr>
        <td> <label>全程料肉比：</label></td>  
        <td>@Html.TextBoxFor(model => model.ratioAll, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=1})</td>

        <td> <label>3.2还原料肉比：</label></td>  
        <td>@Html.TextBoxFor(model => model.ratio, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=1})</td>

        <td> <label>3.5还原料肉比：</label></td>  
        <td>@Html.TextBoxFor(model => model.ratio2, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=1})</td>
    </tr>
    <tr>
        <td> <label>寒暑津贴：</label></td>  
        <td>@Html.TextBoxFor(model => model.allowance, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>

        <td> <label>成活率奖：</label></td>  
        <td>@Html.TextBoxFor(model => model.bonus, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>

        <td> <label>药费：</label></td>  
        <td>@Html.TextBoxFor(model => model.drugCost, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=2})</td>
    </tr>
    <tr>
        <td> <label>分值：</label></td>  
        <td>@Html.TextBoxFor(model => model.score, new { @Class = "easyui-numberbox",@style="width:60px;",
                @precision=0})</td>

        <td></td>
        <td></td>

        <td></td>
        <td></td>

    </tr>
    <tr>
        <td> <label>备注：</label></td>  
        <td colspan="5">@Html.TextAreaFor(model => model.description, new { @placeholder = "填写备注信息" })</td>

    </tr>

    </table>

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.PigID)
    @Html.HiddenFor(model => model.referPerson)
    @Html.HiddenFor(model => model.referTime)
    
    <div style="text-align:right;padding-right:30px">
    <a href="javascript:void(0)" class="easyui-linkbutton save" iconCls="icon-save" plain="true" >保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton cancel" iconCls="icon-cancel" plain="true">取消</a>
    </div>

</form>

</fieldset>

</div>
