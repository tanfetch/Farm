@model IEnumerable<Farm.Raisers.DataContext.ClosurePig>

@if (Model.Count() == 0)
{
    Response.End();
}

<fieldset>
    <legend>
        <a href="javascript:void(0)" 
            onclick="newMainPanel('/Checkout/ClosurePig?closeDate_2=@DateTime.Today.AddDays(-25)','待结列表','icon-livepigs')"
            class="easyui-linkbutton" data-options="plain:true" style="margin:0 5px;">
            <span>清栏超过25天的养户</span>
        </a>
    </legend> 
    <div style="">
     @foreach (var item in Model.OrderBy(p=>p.closeDate))
        {
            <a href="javascript:void(0)" 
                onclick="newMainPanel('/Checkout/ClosurePig?raiserID_0=@item.raiserID','待结列表','icon-livepigs')"
                class="easyui-linkbutton" data-options="plain:true" style="margin:0 3px;">
                <span>@item.raiserName</span>
            </a>
        }

    </div>
</fieldset>