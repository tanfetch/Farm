@using Farm.Raisers.DataContext
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="easyui-layout" data-options="fit:true">

<div data-options="region:'west',title:'',split:true" style="padding:5px;border:none;width :1000px;">
    
    <div class="easyui-layout" data-options="fit:true">

        <div data-options="region:'north',title:''" style="padding:0px; border:0;height:200px;">

            <div class="easyui-layout" data-options="fit:true">

                <div data-options="region:'west',title:''" style="padding:5px;border:none;width:490px;height:200px;">
                    <div class="easyui-tabs" style="" data-options="fit:true,plain:false">         
                        <div data-options="title:'分组统计'" style="padding:10px;">             
                                @Html.Partial("AreaGroupBar") 
                        </div>
                    </div>
                </div>

                <div data-options="region:'east',title:''" style="padding:5px; border:0;width:490px;height:200px;">
                    <div class="easyui-tabs" style="" data-options="fit:true,plain:false">         
                        <div data-options="title:'重点关注'" style="padding:10px;">             
                                @Html.Partial("Attention") 
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div data-options="region:'center',title:''" style="padding:5px; border:0;">

            <div class="easyui-tabs" style="" data-options="fit:true,plain:false"> 
                <div data-options="title:'区域汇总'" style="padding:0px;">
                    <div class="easyui-panel" data-options="border:false,fit:true"> @Html.Partial("AreaGroup")  </div> 
                </div>    
            </div>

        </div>

    </div>
       
</div>
    
<div data-options="region:'center',title:'概要信息',border:false" style="padding:5px;width:200px;">
    @Html.Partial("Summary")
</div>
  
</div>


    