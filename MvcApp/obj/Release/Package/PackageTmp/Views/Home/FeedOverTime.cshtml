@model IEnumerable<Farm.Raisers.DataContext.LivePig>

@if (Model.Count() == 0)
{
    Response.End();
}

<fieldset>
    <legend>
        <a href="javascript:void(0)" 
            onclick="newMainPanel('/Pig/List?feedSurplusDays_2=-2','在养列表','icon-livepigs')"
            class="easyui-linkbutton" data-options="plain:true" style="margin:0 5px;">
            <span>超过2天没领料的养户</span>
        </a>
    </legend> 
    <div style="">
    @foreach (var item in Model.OrderBy(p=>p.feedSurplusDays))
    {
        <a href="javascript:void(0)" 
            onclick="newMainPanel('/Pig/List?raiserID_0=@item.raiserID','在养列表','icon-livepigs')"
            class="easyui-linkbutton" data-options="plain:true" style="margin:0 3px;">
            <span>@item.raiserName</span>
            <span style="color:brown;">( @item.feedSurplusDays )</span>
        </a>
    }

    </div>
</fieldset>