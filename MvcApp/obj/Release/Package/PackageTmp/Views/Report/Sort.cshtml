<div style="padding:30px">

    <div class="ftitle">排名</div>  
    <form method="post" id="fm_sortReport">
        <div class="fitem">  
            <label>区域：</label>  
            @Html.DropDownList("areaID_0", ViewModelHelper.GetAuthoryFieldItems(Request["areaID_0"], true), new {@style="width:auto;" }) 
        </div>
        <!--
        <div class="fitem">  
            <label>编号</label>
            @Html.TextBox("raiserID_0", Request["raiserID_0"], new { @style = "width:60px;" })
        </div>
    
        <div class="fitem">  
            <label>养户</label>
            @Html.TextBox("raiserName_4", Request["raiserName_4"], new { @style = "width:60px;" })
        </div>
        -->
        <div class="fitem">  
            <label>调入日期 </label>
            @Html.TextBox("grantDate_1", Request["grantDate_1"], new { @class = "easyui-datebox", @style = "width:90px;" })
                -
            @Html.TextBox("grantDate_2", Request["grantDate_2"], new { @class = "easyui-datebox", @style = "width:90px;" })
        </div>

        <div class="fitem">  
            <label>排序方式：</label>  
                
                <input id="sort-Area" checked type="radio" value="Area" name="sortby" />
                <label style="width:auto;" for="sort-Area">服务区</label>

                <input id="sort-Technician" type="radio" value="Technician" name="sortby" />
                <label style="width:auto;" for="sort-Technician">技术员</label>

                <input id="sort-Source" type="radio" value="Source" name="sortby" />
                <label style="width:auto;" for="sort-Source">来源</label>
                
        </div>    

        <div class="fitem" style="margin:30px 0;">  
        <label></label>  
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-save" plain="false" onclick="dosort(this)" >生成</a>
        </div>
    </form>

</div>  

<script>
    function dosort(obj) {
        var fm = $(obj).parents('form');

        fm.ajaxSubmit({
            url: "/Report/Sort?r=" + Math.random(),
            beforeSubmit: function () {
                return true;
                //return fm.form('validate');
            },
            success: function (data) {
                var success = eval(data);
                if (success) {
                    newMainPanel('/Report/Index?rspType=view', '报表', 'icon-report');
                }
            }
        });
    }

</script>
