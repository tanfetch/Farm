@model Farm.Authority.DataContext.tbRole

<div style="padding:3px 0;">

<form action="/Role/Update" method="post">

    <table><tr><td>
        <label>权限组：</label></td>  
        <td>@Html.TextBoxFor(model => model.name, new {@Class="easyui-validatebox",@style="width:100px;" })</td>
    </tr><tr><td>
        <label>说明：</label> </td> 
        <td>@Html.TextAreaFor(model => model.description, new { @Class = "easyui-validatebox" })
    </td>  
    </tr></table>
    @Html.HiddenFor(model => model.ID)
    
    <div style="text-align:right;padding-right:30px">
    <a href="javascript:void(0)" class="easyui-linkbutton save" iconCls="icon-save" plain="true" >保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton cancel" iconCls="icon-cancel" plain="true">取消</a>
    </div>

</form>

</div>
